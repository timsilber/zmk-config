#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/  {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// | ESC |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BSPC|
// | TAB |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
// | L1  |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ENTER  |
//                    | LALT | LGUI | LSHFT |   | SPACE | L1  | L2 |
                        bindings = <
   &kp ESC &kp Q &kp W &kp E &kp R &kp T    &kp Y &kp U  &kp I     &kp O   &kp P    &kp BSPC
   &kp TAB &kp A &kp S &kp D &kp F &kp G    &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
   &mo 1 &kp Z &kp X &kp C &kp V &kp B      &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &kp RET
              &kp LALT &kp LGUI &kp LSHFT   &kp SPACE &mo 1 &mo 2
                        >;
                };
                lower_layer {
// -----------------------------------------------------------------------------------------
// |  1 |  2  |  3  |  4  |  5  |  6  |   |  7  |  8  |  9  |  0  |  -  | = |
// |     |     |     |     |     |  |   |    |    |     |    |    |  UP   |       |
// | L1  |     |     |     |     |     |   |     |     |     |  LFT   |  DWN   |  RGT    |
//                    | GUI |     | SHFT |   | SPACE |     |       |
                        bindings = <
   &kp N1 &kp N2  &kp N3 &kp N4   &kp N5 &kp N6                                    &kp N7 &kp N8 &kp N9 &kp N0 &kp MINUS &kp EQUAL
   &trans &trans &trans &trans &trans &trans    &trans &trans &trans &trans   &kp UP      &trans
   &mo 1  &trans  &trans       &trans       &trans     &trans       &trans        &trans   &trans     &kp LEFT &kp DOWN &kp RIGHT
                          	        &kp LGUI     &trans       &kp LSHFT       &kp SPACE  &trans   &trans
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BSPC |
// | BTCLR| BT1 | BT2 | BT3 | BT4 |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
// | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp  TAB  &kp EXCL &kp AT &kp HASH &kp DLLR &kp PRCNT   &kp CARET &kp AMPS  &kp KP_MULTIPLY &kp LPAR &kp RPAR &kp BSPC
   &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4      &kp MINUS &kp EQUAL &kp LBKT        &kp RBKT &kp BSLH &kp GRAVE
   &mo 1 &trans   &trans &trans   &trans   &trans      &kp UNDER &kp PLUS  &kp LBRC        &kp RBRC &kp PIPE &kp TILDE
                    	     &kp LGUI &trans   &kp SPACE   &kp RET   &trans    &kp RALT
                        >;
                };
        };
};
